.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 输入区域样式 */
.input-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.url-input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.parse-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff2442;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
}

/* 图片网格样式 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.image-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.image-item image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.image-actions {
  padding: 20rpx;
}

.copy-btn {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #3498db;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}

/* 加载状态 */
.parse-btn[loading] {
  opacity: 0.8;
} 