/* 页面整体容器 */
.page_container {
  min-height: 100vh;
  background-color: #f5f7fa;
  position: relative;
}

/* 顶部背景 */
.top_bg {
  height: 240rpx;
  background: linear-gradient(135deg,rgb(144, 203, 189) 0%, #88d3ce 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

/* 主内容区域 */
.main_content {
  position: relative;
  margin-top: -120rpx;
  padding: 0 30rpx;
}

/* 用户信息卡片 */
.user_card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.userinfo_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.username {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

/* 菜单卡片 */
.menu_card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: white;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.menu_item:last-child {
  border-bottom: none;
}

.menu_item_hover {
  background-color: #f5f7fa;
}

.menu_item_left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu_icon {
  width: 40rpx;
  height: 40rpx;
}

.menu_text {
  font-size: 30rpx;
  color: #333;
}

.arrow_icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 去除按钮默认样式 */
button {
  padding: 0;
  background: none;
  line-height: normal;
  border-radius: 0;
}

button::after {
  border: none;
}